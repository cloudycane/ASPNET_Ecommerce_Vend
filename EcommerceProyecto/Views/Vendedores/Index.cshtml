@model IEnumerable<EcommerceProyecto.Models.Vendedor>

@{
    ViewData["Title"] = "Index";
}
<p>
    <a class="btn btn-primary float-end" asp-action="Create">Create New</a>
</p>
<h1>Listados Vendedores</h1>

<table class="table-bordered container-sm-fluid">
    <thead>
        <tr>
            <th class="col-1">
                ID Vendedor
                </th>
            <th class="col-1">
                Nombre
            </th>
            <th class="col-1">
                Apellidos
            </th>
            <th class="col-1">
                Dirección
            </th>
            <th class="col-1">
                Nº Teléfono
            </th>
            <th class="col-1">
                Tarjeta de Crédito
            </th>
            <th class="col-1">
                Correo Electrónico
            </th>
            <th class="col-1">
                Fecha Nacimiento
            </th>
            <th class="col-1">
                Valoración
            </th>
            <th class="col-1">
                Verificado
            </th>
            <th class="col-2">
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="col-1">
                @item.VendedorId.GetHashCode()
            </td>
            <td class="col-1">
                @Html.DisplayFor(modelItem => item.NombreVendedor)
            </td>
            <td class="col-1">
                @Html.DisplayFor(modelItem => item.ApellidosVendedor)
            </td>
            <td class="col-1">
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td class="col-1">
                @Html.DisplayFor(modelItem => item.NumTelefono)
            </td>
            <td class="col-1">
                @Html.DisplayFor(modelItem => item.TarjetaDeCredito)
            </td>
            <td class="col-1">
                @Html.DisplayFor(modelItem => item.Correo_Electronico)
            </td>
            <td class="col-1">
                @Html.DisplayFor(modelItem => item.FechaNacimiento)
            </td>
            <td class="col-1">
                @Html.DisplayFor(modelItem => item.Valoracion)
            </td>
            <td class="col-1">
                @Html.DisplayFor(modelItem => item.EsVerificado)
            </td>
            <td class="col-2">
                <a class="btn btn-secondary m-1" asp-action="Edit" asp-route-id="@item.VendedorId">Edit</a>
                <a class="btn btn-dark m-1" asp-action="Details" asp-route-id="@item.VendedorId">Details</a>
                <a class="btn btn-danger m-1" asp-action="Delete" asp-route-id="@item.VendedorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
